@model CP_AuthCookieApp.Models.User
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="edit" asp-controller="home">
    <div class="form-group">
        <label asp-for="Email" class="control-label">Почта</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Пароль</label>
        <input type="number" asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>